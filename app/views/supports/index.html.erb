\<p id="notice"><%= notice %></p>

<h1>Supports</h1>



<table>
  <thead>
    <tr>
      <th>Station</th>
      <th>Typeofsupport</th>
      <th>Servicetag</th>
      <th>Description</th>
      <th>Text</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @supports.each do |support| %>
     <% if support.station == current_user.station %>
      <tr>
        <td><%= support.station %></td>
        <td><%= support.typeofsupport %></td>
        <td><%= support.servicetag %></td>
        <td><%= support.description %></td>
        <td><%= support.text %></td>
        <td><%= support.user_id %></td>
        <td><%= link_to 'Show', support %></td>
        <% if can? :update, support %>
	<td><%= link_to 'Edit', edit_support_path(support) %></td>
        <% end %>
        <% if can? :update, support %>
	<td><%= link_to 'Destroy', support, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
       </tr>
     <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Support', new_support_path %><br><br>
<%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
