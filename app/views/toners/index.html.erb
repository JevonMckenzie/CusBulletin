<html>
<head>
<title> Customs Toner Requisition </title>
<style>
table, th, td, tr {
  border: 1px solid black;
  border-collapse: collapse;
  text-align: center;
}
</style>
</head>
<body>

<div class="">
<div class="bg-faded p-4 my-4" style="display:table;" >

<p id="notice"><%= notice %></p>

<h1 align="center">Toner Requisitions</h1><br>
<br>
<%= link_to 'New Toner', new_toner_path %><br>
<%= link_to 'Home', root_path %><br>
<%= link_to 'Sign out', destroy_user_session_path, method: :delete %><br><br>


<table width="">
  
    <tr>
      <th>Requisitionnumber</th>
      <th>Username</th>
      <th>Tonername</th>
      <th>Quantity</th>
      <th>Sectionname</th>
      <th>Stationname</th>
      <th>Requestdate</th>
      <th>Comment</th>
      <th>Issuedate</th>
      <th>Issuedby</th>
      <th>Issuecomment</th>
      <th colspan="3">Make Changes</th>
    </tr>
  

   
    <% @toners.each do |toner| %>
      <% if toner.stationname == current_user.station || current_user.admin == true %>
      <tr>
        <td><%= toner.requisitionnumber %></td>
        <td><%= toner.username %></td>
        <td><%= toner.tonername %></td>
        <td><%= toner.quantity %></td>
        <td><%= toner.sectionname %></td>
        <td><%= toner.stationname %></td>
        <td><%= toner.requestdate %></td>
        <td><%= toner.comment %></td>
        <td><%= toner.issuedate %></td>
        <td><%= toner.issuedby %></td>
        <td><%= toner.issuecomment %></td>
        <td><%= link_to 'Show', toner %></td>
        <% if can? :update, toner %>
        <td><%= link_to 'Edit', edit_toner_path(toner) %></td>
        <% end %>
        <% if can? :update, toner %>
        <td><%= link_to 'Destroy', toner, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>


<br>


</div>
</div>
</body>
</html>
